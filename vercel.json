{
  "version": 2,
  "functions": {
    "api/**/*.js": { "maxDuration": 60, "memory": 1024 }
  },
  "routes": [
    { "handle": "filesystem" },

    {
      "src": "/api/admin/records/([^/]+)/next$",
      "dest": "/api/admin/records/[id]/next.js"
    },
    {
      "src": "/api/admin/records/([^/]+)/location$",
      "dest": "/api/admin/records/[id]/location.js"
    },
    {
      "src": "/api/admin/records/([^/]+)$",
      "dest": "/api/admin/records/[id].js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
